{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Agent Speech Plugin Configuration",
  "description": "Configuration schema for the Agent Speech Plugin (Claude Code)",
  "type": "object",
  "required": ["version", "enabled", "voice", "rate", "volume"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference"
    },
    "version": {
      "type": "string",
      "description": "Config version for migration",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "enabled": {
      "type": "boolean",
      "description": "Enable TTS",
      "default": true
    },
    "voice": {
      "type": "string",
      "description": "macOS voice name (e.g., Samantha, Alex, Victoria)",
      "examples": ["Samantha", "Alex", "Victoria", "Fred", "Yuna", "Joon"]
    },
    "rate": {
      "type": "integer",
      "description": "Speech rate in words per minute",
      "minimum": 50,
      "maximum": 400,
      "default": 200
    },
    "volume": {
      "type": "integer",
      "description": "Volume level (0-100)",
      "minimum": 0,
      "maximum": 100,
      "default": 50
    },
    "minLength": {
      "type": "integer",
      "description": "Minimum response length to speak (0 = no minimum)",
      "minimum": 0,
      "default": 10
    },
    "maxLength": {
      "type": "integer",
      "description": "Maximum response length to speak (0 = no limit)",
      "minimum": 0,
      "default": 0
    },
    "filters": {
      "type": "object",
      "description": "Content filtering options",
      "properties": {
        "sensitive": {
          "type": "boolean",
          "description": "Filter out sensitive information (passwords, API keys, etc.)",
          "default": false
        },
        "skipCodeBlocks": {
          "type": "boolean",
          "description": "Skip code blocks when speaking",
          "default": false
        },
        "skipCommands": {
          "type": "boolean",
          "description": "Skip command outputs",
          "default": false
        }
      }
    },
    "language": {
      "type": "string",
      "description": "Language setting for i18n",
      "examples": ["en", "ko", "ja", "zh"]
    }
  }
}
